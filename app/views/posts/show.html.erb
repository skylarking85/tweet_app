<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
        <p><%= @post.content %></p>
        <div class="post-time"><%= @post.created_at %></div>
    </div>
    <%= link_to("Edit", post_edit_path(@post.id)) %>
    <%= link_to("Delete", post_delete_path(@post.id), {method:"post"}) %>
  </div>
</div>